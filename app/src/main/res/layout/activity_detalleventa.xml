<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">




        <ScrollView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TableLayout
                        android:id="@+id/table"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="30dp"
                        android:background="#E0E0E0"
                        android:stretchColumns="*">
                        <TableRow>

                            <TextView
                                android:id="@+id/t_articulo"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="1"
                                android:padding="15sp"
                                android:gravity="center"
                                android:text="ArtÃ­culo"
                                android:textStyle="bold" />

                            <TextView

                                android:padding="15sp"
                                android:id="@+id/t_cantidad"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="Cantidad"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/t_preciounit"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="1"
                                android:padding="15sp"
                                android:gravity="center"
                                android:text="Precio unit."
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/t_monto"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="Monto"
                                android:padding="15sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/t_asterizco"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text=""
                                android:padding="15sp"
                                android:textStyle="bold" />
                        </TableRow>

                    </TableLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_margin="10dp"
                            android:textColor="@color/negro"
                            android:text="Monto Total: "
                            android:gravity="center"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                        </TextView>

                        <TextView
                            android:id="@+id/t_imhere"
                            android:textStyle="bold"
                            android:textColor="@color/negro"
                            android:gravity="end"
                            android:textSize="18sp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        </TextView>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"
                        android:orientation="horizontal">

                        <Button
                            android:layout_margin="10dp"
                            android:id="@+id/b_borrartodo"
                            android:background="@drawable/press_button_ovalo"
                            android:textColor="@color/blanco"
                            android:text="Borrar todo"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent">

                        </Button>

                        <Button
                            android:layout_margin="10dp"
                            android:id="@+id/b_generarcompra"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:text="Generar compra"
                            android:background="@drawable/press_button_ovalo"
                            android:textColor="@color/blanco"
                            android:textSize="15sp"
                            android:textStyle="bold">

                        </Button>

                    </LinearLayout>
                </LinearLayout>
            </HorizontalScrollView>



        </ScrollView>

    </LinearLayout>


</LinearLayout>