<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/blanco"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout

        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/grecia">

        </ImageView>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/fuguesa">

        </ImageView>

    </LinearLayout>

    <GridLayout

        android:background="#1E88E5"
        android:id="@+id/gridl"
        android:columnCount="2"
        android:rowCount="2"
        android:layout_gravity="center"
        android:alignmentMode="alignMargins"
        android:columnOrderPreserved="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            app:cardElevation="6dp"
            app:cardCornerRadius="12dp"
            android:layout_margin="12dp"
            >

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="176dp"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/i_griferia"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/faucet"></ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="GriferÃ­a"
                    android:textColor="@color/azul_600"
                    android:textSize="18sp"></TextView>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            app:cardElevation="6dp"
            app:cardCornerRadius="12dp"
            android:layout_margin="12dp"
            >

            <LinearLayout
                android:id="@+id/l_accesoriosrepuestos"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/i_accesoriosrepuestos"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/fix"></ImageView>

                <TextView
                    android:layout_width="124dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Accesorios y repuestos"
                    android:textAlignment="center"
                    android:textColor="@color/azul_600"
                    android:textSize="18sp">

                </TextView>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            app:cardElevation="6dp"
            app:cardCornerRadius="12dp"
            android:layout_margin="12dp"
            >
            <LinearLayout
                android:gravity="center"
                android:padding="16dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/i_importaciones"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/plumbing"></ImageView>
                <TextView
                    android:layout_marginTop="12dp"
                    android:textColor="@color/azul_600"
                    android:textSize="18sp"
                    android:text="Importaciones"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            app:cardElevation="6dp"
            app:cardCornerRadius="12dp"
            android:layout_margin="12dp"
            >
            <LinearLayout
                android:gravity="center"
                android:padding="16dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/i_serviciosindustriales"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/factory"></ImageView>

                <TextView
                    android:layout_width="102dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Servicios industriales"
                    android:textAlignment="center"
                    android:textColor="@color/azul_600"
                    android:textSize="18sp">

                </TextView>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </GridLayout>



        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <Button

                android:layout_gravity="center"
                android:layout_marginRight="15dp"
                android:id="@+id/b_salir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_alignParentStart="true"
                android:textColor="@color/blanco"
                android:background="@drawable/press_button_ovalo"
                android:layout_marginLeft="15dp"
                android:text="Salir">

            </Button>

            <Button
                android:textColor="@color/blanco"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:id="@+id/b_miEstadoCuenta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:background="@drawable/press_button_ovalo"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:text="Mis pagos" />

            <Button
                android:textColor="@color/blanco"
                android:layout_gravity="center"
                android:layout_marginRight="15dp"
                android:background="@drawable/press_button_ovalo"
                android:layout_weight="1"
                android:id="@+id/b_pedidos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginLeft="15dp"
                android:text="Mis pedidos" />


        </LinearLayout>



</LinearLayout>